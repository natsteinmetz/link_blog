<h1>Listing links</h1>

<table>
  <tr>
    <th>Link</th>
    <th>Title</th>
    <th>Description</th>
    <th>Topic</th>
    <th>Ruby</th>
    <th>Rails</th>
    <th>Added at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @links.each do |link| %>
  <tr>
    <td><%= link.link %></td>
    <td><%= link.title %></td>
    <td><%= link.description %></td>
    <td><%= link.topic %></td>
    <td><%= link.ruby %></td>
    <td><%= link.rails %></td>
    <td><%= link.added_at %></td>
    <td><%= link_to 'Show', link %></td>
    <td><%= link_to 'Edit', edit_link_path(link) %></td>
    <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

